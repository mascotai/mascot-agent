####################################
#### Server Configuration ####
####################################

# Server Port
SERVER_PORT=3000

# Server Host (default: 0.0.0.0)
SERVER_HOST=

# Environment Mode (development/production - affects UI and security)
NODE_ENV=production

# Controls whether the web UI is available
# Set to "true" to force enable, "false" to force disable, or leave unset for automatic behavior
# Default: enabled in development, disabled in production
ELIZA_UI_ENABLE=true

# Server authentication token for API access
# When set, all /api/* routes require X-API-KEY header with this value
ELIZA_SERVER_AUTH_TOKEN=your-secure-api-token-here

# Express Maximum Payload Size (default: 2mb)
EXPRESS_MAX_PAYLOAD=2mb

####################################
#### Database Configuration ####
####################################

# PostgreSQL Connection URL (Azure Flexible Server)
POSTGRES_URL=postgresql://username:password@your-server.postgres.database.azure.com:5432/mascotai_db?sslmode=require

# PGLite Database Directory (or use memory:// for in-memory)
# Alternative to Postgres - leave empty when using Azure PostgreSQL
PGLITE_DATA_DIR=

####################################
#### AI Model Provider APIs ####
####################################

# OpenAI API Key (Primary model provider)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Generative AI API Key
GOOGLE_GENERATIVE_AI_API_KEY=

# Anthropic Claude API Key (Embedding Provider required; will default to local embedding if not provided)
ANTHROPIC_API_KEY=

# OpenRouter API Key (Embedding Provider required; will default to local embedding if not provided)
OPENROUTER_API_KEY=

# Ollama API Endpoint (for local LLM hosting, supports embedding)
OLLAMA_API_ENDPOINT=

####################################
#### Character & Content Loading ####
####################################

# Remote Character URLs (comma-separated)
REMOTE_CHARACTER_URLS=

####################################
#### Development & Build Control ####
####################################

# Non-interactive CLI Mode (true/false)
ELIZA_NONINTERACTIVE=false

####################################
#### Plugin Control ####
####################################
# Note: for all available / required configuration for specific plugins
# Check agentConfig property on their package.json

# Skip loading the bootstrap plugin (any value)
# Do not change if you are not customizing bootstrap with another plugin
IGNORE_BOOTSTRAP=

####################################
#### Custom Plugin Configuration ####
#### (Your specific authentication & social plugins)
####################################

# Authentication Plugin Encryption Key (32+ characters)
AUTH_ENCRYPTION_KEY=your-32-character-encryption-key-here-abcdef1234567890

# Twitter API Configuration (for your connections plugin)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET_KEY=your-twitter-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-secret

# Twitter Feature Toggles
TWITTER_ENABLE_POST=true
TWITTER_ENABLE_REPLIES=false
TWITTER_ENABLE_ACTIONS=false
TWITTER_POST_INTERVAL=1
TWITTER_RETRY_LIMIT=5

####################################
#### Azure-Specific Configuration ####
####################################

# Azure Database SSL Configuration
POSTGRES_SSL=require

# Azure OpenAI Configuration (if using Azure OpenAI)
OPENAI_BASE_URL=your-azure-openai-endpoint
OPENAI_SMALL_MODEL=azure/gpt-4o-mini
OPENAI_LARGE_MODEL=azure/gpt-4o

####################################
#### Logging Configuration ####
####################################

# Logging level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info

####################################
#### Optional Service Integrations ####
####################################

# Discord Bot (optional)
DISCORD_APPLICATION_ID=your-discord-app-id
DISCORD_API_TOKEN=your-discord-bot-token

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token